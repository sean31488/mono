{
  "extends": [
    "@tsconfig/node22/tsconfig.json",
    "@vue/tsconfig/tsconfig.dom.json"
  ],
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "noEmit": false,
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "outDir": "dist/types"
  },
  "include": ["*.d.ts", "src/**/*.ts", "src/**/*.vue"],
  "exclude": ["node_modules", "dist", "src/main.ts", "src/App.vue"]
}
